<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.danielsapps.packbuddy.CreateProfile"
    tools:showIn="@layout/create_profile">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/profileImage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/outline" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/take_photo"
        android:id="@+id/photoButton"
        android:layout_below="@+id/profileImage"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/name"
        android:ems="10"
        android:id="@+id/nameTextEntry"
        android:layout_below="@+id/photoButton"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/email"
        android:ems="10"
        android:id="@+id/emailTextEntry"
        android:layout_below="@+id/nameTextEntry"
        android:layout_alignLeft="@+id/nameTextEntry"
        android:layout_alignStart="@+id/nameTextEntry" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/home_city"
        android:ems="10"
        android:id="@+id/homeCityTextEntry"
        android:layout_below="@+id/emailTextEntry"
        android:layout_alignLeft="@+id/emailTextEntry"
        android:layout_alignStart="@+id/emailTextEntry" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordEditText"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/homeCityTextEntry"
        android:layout_alignStart="@+id/homeCityTextEntry" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitButton"
        android:onClick="createProfile"
        android:layout_below="@+id/passwordEditText"
        android:layout_alignLeft="@+id/photoButton"
        android:layout_alignStart="@+id/photoButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="password"
        android:id="@+id/textView"
        android:layout_below="@+id/homeCityTextEntry"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
